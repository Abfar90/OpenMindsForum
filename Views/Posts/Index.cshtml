@model IEnumerable<OpenMindsForum.ViewModels.ListPostViewModel>

@{
    ViewData["Title"] = "Index";
}
<br />
<h3>All posts</h3>
<hr />
<div class="text-center">
<table class="table">
        <thead>
            <tr>
                <th style="text-align: left">
                    @Html.DisplayNameFor(model => model.title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.stamp)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.subject)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.comments)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) 

            {
                <tr>
                    <td style="text-align: left">
                            <a asp-controller="Posts" asp-action="Details" asp-route-id="@item.postID">@Html.DisplayFor(modelItem => item.title)</a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.stamp)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.subject) @*lägg till länk som tar till alla posts för kategorin*@
                    </td>
                        <td>
                            <span class="badge bg-primary rounded-pill">@Html.DisplayFor(modelItem => item.comments)</span>
                        </td>
                </tr>
            }
        </tbody>
</table>
</div>
<hr />
<br />
<a asp-action="Create"><button type="button" class="btn btn-outline-primary">Create New</button></a>
    

    
 
